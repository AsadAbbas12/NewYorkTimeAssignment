<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorLightGray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_picture"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@android:drawable/ic_lock_power_off"
            app:riv_corner_radius="5dp"
            app:riv_oval="true"
            app:riv_border_width="0dp"/>

        <ae.com.asadabbas.assignement.newyorktime.views.BoldTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/iv_right_arrow"
            android:layout_toRightOf="@+id/iv_picture"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/colorLightBlack"
            android:textSize="15sp" />

        <ae.com.asadabbas.assignement.newyorktime.views.LightTextView
            android:id="@+id/tv_written_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_description"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/iv_right_arrow"
            android:layout_toRightOf="@+id/iv_picture"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <ae.com.asadabbas.assignement.newyorktime.views.LightTextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_written_by"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_picture"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <ae.com.asadabbas.assignement.newyorktime.views.LightTextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_written_by"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/iv_right_arrow"
            android:drawableLeft="@drawable/calendar"
            android:drawablePadding="5dp"
            android:gravity="right|center"
            android:text=""
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/right_arrow" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

